@model UserRegisterViewModel

@{
    ViewData["Title"] = "Add New User";
}

<section class="register-form">
    <div class="container">
        <div class="title">Please Register User</div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form method="post" enctype="multipart/form-data" novalidate>

            <div class="name form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName">
                <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
            </div>

            <div class="lastname form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName">
                <small><span asp-validation-for="LastName" class="text-danger"></span></small>
            </div>




            <div class="street form-group">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName">
                <small><span asp-validation-for="StreetName" class="text-danger"></span></small>
            </div>



            <div class="postalcode form-group">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode">
                <small><span asp-validation-for="PostalCode" class="text-danger"></span></small>
            </div>

            <div class="city form-group">
                <label asp-for="City"></label>
                <input asp-for="City">
                <small><span asp-validation-for="City" class="text-danger"></span></small>
            </div>





            <div class="mobile form-group">
                <label asp-for="Mobile"></label>
                <input asp-for="Mobile">
                <small><span asp-validation-for="Mobile" class="text-danger"></span></small>
            </div>

            <div class="company form-group">
                <label asp-for="Company"></label>
                <input asp-for="Company">
                <small><span asp-validation-for="Company" class="text-danger"></span></small>
            </div>




            <div class="email form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email">
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>

            <button type="submit" class="btn-theme">Submit</button>


        </form>



    </div>
</section>